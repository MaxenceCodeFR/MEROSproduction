<div class="offcanvas offcanvas-start show" data-bs-scroll="true" data-bs-backdrop="false" tabindex="1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
	<div class="offcanvas-header">
		<h5 class="offcanvas-title" id="offcanvasScrollingLabel">Tableau de bord</h5>
	</div>
	<div class="offcanvas-body">
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link" href="{{ path('ceo_index') }}">Accueil</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{ path('ceo_profil') }}">Profil</a>
			</li>
			<li class="nav-item">
				<a class="nav-link position-relative" href="{{ path('ceo_company') }}">Gestion des contrats
					{% if companyNotificationsCount > 0 %}
						<span class="badge bg-danger text-white position-absolute" style="top: 10px; right: 20px;">{{ companyNotificationsCount }}</span>
					{% endif %}
				</a>
			</li>
			<li class="nav-item position-relative">
				<a class="nav-link" href="{{ path('ceo_candidate') }}">Candidature
					{% if influencerNotificationsCount > 0 %}
						<span class="badge bg-danger text-white position-absolute" style="top: 10px; right: 20px;">{{ influencerNotificationsCount }}</span>
					{% endif %}
				</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{ path('ceo_request') }}">Demande d'informations</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="{{ path('calendar') }}">Calendrier</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#">Statistique</a>
			</li>
			<li class="nav-item mt-5">
				<a class="btn btn-danger" href="{{ path('logout') }}">DÃ©connexion</a>
			</li>
		</ul>
		<div class="offcanvas-footer">
			{% for media in app.user.images %}
				<a href="{{ path('ceo_profil') }}">
					<img src="{{ asset('assets/uploads/' ~ media.getImages()) }}" class="rounded-circle img-fluid">
				</a>
			{% endfor %}
		</div>
	</div>
</div>
