{% for label,messages in app.flashes %}
	{% for message in messages %}
		<div class="alert alert-{{ label }} alert-dismissible" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
			<div class="alert-message">
				{{ message|raw }}
				| Ce message disparaitra dans 5 secondes
			</div>
		</div>

	{% endfor %}
{% endfor %}

<script>
	document.addEventListener('DOMContentLoaded', function () { // Sélectionner tous les éléments avec la classe 'alert'
var alerts = document.querySelectorAll('.alert');

// Parcourir chaque alerte
alerts.forEach(function (alert) { // Disparaître après 5 secondes (5000 millisecondes)
setTimeout(function () {
alert.style.display = 'none';
}, 5000);
});
});
</script>
