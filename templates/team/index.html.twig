{% extends "base.html.twig" %}
{% block title %}L'équipe Meros
{% endblock %}
{% block body %}
	{% include "commons/_navbar.html.twig" %}
	<h1 class="text-center my-4">La fine équipe</h1>
	<div class="container">
		<div class="row">
			{% for team in teams %}
				<div class="col">
					<div class="card">
						<div class="card-body">
							{% for media in team.images %}
								<img src="{{ asset('assets/uploads/' ~ media.getImages()) }}" class="card-img-top rounded-circle img-fluid w-50 h-auto mx-auto d-block">
							{% endfor %}
							<h5 class="card-title text-center mt-3">{{ team.firstname }}
								{{ team.lastname }}</h5>
							<div class="accordion accordion-flush" id="accordionFlushExample">
								<div class="accordion-item">
									<h2 class="accordion-header">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne{{ team.id }}" aria-expanded="false" aria-controls="flush-collapseOne{{ team.id }}">
											Afficher la biographie
										</button>
									</h2>
									<div id="flush-collapseOne{{ team.id }}" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
										<div class="accordion-body">{{team.text}}</div>
									</div>
								</div>
							</div>
							<h6 class="text-center">Ses spécialités</h6>
							<ul class="list-group list-group-flush">
								{% for specialty in team.specialty %}
									<li class="list-group-item">#{{ specialty.name }}</li>
								{% endfor %}
							</ul>
							<h6 class="text-center">Ses réseaux sociaux</h6>
							{% for socialNetwork in team.socialNetworks %}
								{% for name, url in socialNetwork %}
									{% if url %}
										<div>
											<strong>{{ name }}:</strong>
											<a href="{{ url }}">{{ url }}</a>
										</div>
									{% endif %}
								{% endfor %}
							{% endfor %}

						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
