{% extends 'base.html.twig' %}

{% block title %}Devenir Influenceur
{% endblock %}

{% block body %}
	{% include "commons/_navbar.html.twig" %}
<div class="form-and-image">

	<div class="container company-form w-75">
		<h1>Contact Influenceur</h1>

		{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

		<div class="mb-3">
			{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.motif, {'attr': {'class': 'form-select'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.answer, 'Comment avez-vous connu Meros ?', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.answer, {'attr': {'class': 'form-control'}}) }}
		</div>


		<div class="mb-3">
			{{ form_row(form.text, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(form.cv, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(form.condition, {'attr': {'class': 'form-control'}}) }}
			<p>
				<small>
					<a href="{{path('rgpd')}}">Veuillez retrouver ici la close concernant la conservations des données</a>
				</small>
			</p>
		</div>

		<button type="submit" class="submit-subscribe w-100 mb-3">Envoyer</button>

		{{ form_end(form) }}
	</div>
	<div class="img-office-people">
		<div class="quote-edgar">
			<p class="text-office-people">"Faîtes aussi prospérer votre chiffre d'affaires en choisissant nos influenceurs"</p>
			<small>- Steeven Moreau, PDG Adjoint</small>
		</div>
		<img src="{{ asset('assets/images/poeple-vlogging.png') }}">
	</div>
</div>

{% endblock %}
