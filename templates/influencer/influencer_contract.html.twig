{% extends "base.html.twig" %}
{% block title %}
	{{ contact.company }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4 text-center">{{ contact.company }}</h1>

		<div class="card shadow-lg mb-4">
			<div class="card-body">
				<h3 class="card-title">{{ contact.firstname }}
					{{ contact.lastname }}</h3>
				<p class="card-text">
					<strong>Email :
					</strong>
					{{ contact.email }}<br>
					<strong>Message :
					</strong>
					{{ contact.text }}
				</p>
			</div>
		</div>

		<!-- Ajouter d'autres éléments ou fonctionnalités ici si nécessaire -->
	</div>
{% endblock %}
