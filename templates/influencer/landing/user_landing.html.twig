{% extends 'base.html.twig' %}
{% block title %} Vos influenceurs favoris {% endblock %}
{% block body %}
    {% include 'commons/_navbar.html.twig' %}

{% include 'commons/_breadcrumbs.html.twig' %}
    <section class="influencer-landing mt-5">
        <div class="h3-h2-influenceur">
            <h3>Nos Influenceurs</h3>
            <h2>Ils nous font confiance</h2>
        </div>
        <div class="container mt-5 section-all-influenceur">
            {% for influencer in influencers %}
                    <div class="card mb-3 card-influencer">
                        <div class="card-body">
                            <div class="img-firstname-influencer">
                                {% if influencer.images|length > 0 %}
                                    {% for image in influencer.images %}
                                        <img src="{{ asset('assets/uploads/' ~  image.getImages())}}" class="rounded-circle float-start me-3" style="width: 80px; height: 80px;" alt="Image de {{ influencer.firstname }} {{ influencer.lastname }}">
                                    {% endfor %}
                                {% else %}
                                    <img src="{{ asset('assets/images/default_avatar.webp') }}" class="rounded-circle float-start me-3" style="width: 100px; height: 100px;">
                                {% endif %}
                                <h5 class="card-title">{{ influencer.firstname }} {{ influencer.lastname }}</h5>
                            </div>

                            <div class="mt-4 specialty-influencer">
                                <p class="category-specialty">Ses spécialités</p>
                                {% if influencer.specialty|length > 0 %}
                                    {% for specialty in influencer.specialty %}
                                        <span class="badge rounded-pill border bg-white text-black shadow-sm p-2 me-2">#{{ specialty.name }}</span>
                                    {% endfor %}
                                {% else %}
                                    <p>Désolé, {{ influencer.firstname }} n'a pas encore renseigné cette information </p>
                                {% endif %}
                            </div>
                            <div class="social-links mt-3 ">
                                <p class="category-social">Ses réseaux sociaux</p>
                                {% if influencer.social|length > 0 %}
                                    {% for social in influencer.social %}
                                        {% if social.instagram %}
                                            <div class="social-link card">
                                                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="32" height="32" viewBox="0 0 48 48">
