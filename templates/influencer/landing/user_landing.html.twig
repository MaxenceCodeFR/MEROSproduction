{% extends 'base.html.twig' %}
{% block title %} Vos influenceurs favoris {% endblock %}
{% block body %}
    {% include 'commons/_navbar.html.twig' %}
    <div class="container mt-5">
        <h1 class="mb-4">Les influenceurs que vous suivez</h1>

        <!-- Section pour les influenceurs célèbres -->
        <div class="row mb-5 justify-content-center">
            {% for influencer in influencers %}
                {% if influencer.isFamous %}
                    <div class="col-12 col-sm-6 col-md-3 align-content-around mb-4">
                        <div class="card border-4 border-warning h-100 rounded-5 shadow-lg">
                            <div class="card-header d-flex align-items-center bg-white rounded-top-5 border-0">
                                {% for image in influencer.images %}
                                    <img src="{{ asset('assets/uploads/' ~ image.getImages()) }}" class="rounded-circle" style="width: 80px; height: 80px;" alt="image de {{ influencer.firstname }} {{ influencer.lastname }}">
                                {% endfor %}
                                <span class="ms-2">{{ influencer.firstname }} {{ influencer.lastname }}</span>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div>
                                    {% for specialty in influencer.specialty %}
                                        <span class="badge rounded-pill border bg-white text-black shadow-sm p-2">#{{ specialty.name }}</span>
                                    {% endfor %}
                                </div>
                                <p class="card-text">{{ influencer.text }}</p>
                            </div>
                            <div class="d-flex flex-column align-items-start m-4 border-1 shadow-sm p-2 rounded-2">
                                {% for social in influencer.social %}
                                    {% if social.instagram %}
                                        <div class="d-flex align-items-center mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-instagram me-2" viewBox="0 0 16 16">
                                                <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599s.453.546.598.92c.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.5 2.5 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.5 2.5 0 0 1-.92-.598 2.5 2.5 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233s.008-2.388.046-3.231c.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92s.546-.453.92-.598c.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92m-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217m0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334"/>
                                            </svg>
                                            <a href="{{ social.instagram }}" target="_blank" class="text-danger fw-bold">Instagram</a>
                                        </div>
                                    {% endif %}
                                    {% if social.tiktok %}
                                        <div class="d-flex align-items-center mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-tiktok me-2" viewBox="0 0 16 16">
                                                <path d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3z"/>
                                            </svg>
                                            <a href="{{ social.tiktok }}" target="_blank" class="text-danger fw-bold">TikTok</a>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <a href="{{ path('influencer_show', {id: influencer.id}) }}" class="btn btn-warning rounded-5 m-4">Voir ses publications</a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <!-- Section pour les influenceurs non célèbres -->
        <div class="row mb-5 justify-content-center">
            {% for influencer in influencers %}
                {% if not influencer.isFamous %}
                    <div class="col-12 col-sm-6 col-md-3 align-content-around mb-4">
                        <div class="card h-100 rounded-5 shadow-lg">
                            <div class="card-header d-flex align-items-center bg-white rounded-top-5 border-0">
                                {% if influencer.images|length > 0 %}
                                    {% for image in influencer.images %}
                                        <img src="{{ asset('assets/uploads/' ~ image.getImages()) }}" class="rounded-circle" style="width: 80px; height: 80px;" alt="image de {{ influencer.firstname|default('Inconnu') }} {{ influencer.lastname|default('') }}">
                                    {% endfor %}
                                {% else %}
                                    <img src="{{ asset('assets/images/default_avatar.webp') }}" class="rounded-circle" style="width: 80px; height: 80px;" alt="Image par défaut">
                                {% endif %}
                                <span class="ms-2">{{ influencer.firstname|default('Prénom inconnu') }} {{ influencer.lastname|default('Nom inconnu') }}</span>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div>
                                    {% if influencer.specialty|length > 0 %}
                                        {% for specialty in influencer.specialty %}
                                            <span class="badge rounded-pill border bg-white text-black shadow-sm p-2">#{{ specialty.name }}</span>
                                        {% endfor %}
                                    {% else %}
                                        <span class="badge rounded-pill bg-secondary">Aucune spécialité</span>
                                    {% endif %}
                                </div>
                                {% if influencer.text %}
                                    <p class="card-text">{{ influencer.text }}</p>
                                {% else %}
                                    <p class="card-text">Aucune description disponible pour le moment <br> Promis elle arrive vite !</p>
                                {% endif %}
                            </div>
                            <div class="d-flex flex-column    p-2">
                                <!-- Social media links or other components can be added here -->
                                <a href="{{ path('influencer_show', {id: influencer.id}) }}" class="btn btn-warning rounded-5 m-4">Voir ses publications</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
        {% endblock %}
