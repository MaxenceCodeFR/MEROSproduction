{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% include 'commons/_navbar.html.twig' %}
    {% include 'commons/_breadcrumbs.html.twig' %}
    {% if app.user == true %}
        <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <p class="display-4">Vous avez déjà un compte chez nous</p>
                <a href="{{ path('landing') }}" class="btn btn-success">Accueil</a>
            </div>
        </div>
    </div>
        {% else %}


            <div class="form-and-image">
    <div class="container section-register">
        <div class="row justify-content-center align-items-center">
            <div class="inside-row">
                <h1>Créez votre compte !</h1>
                <p class="mb-5">Ravi de vous compter parmi nous ! </p>

                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, 'Adresse Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>
                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                        <a href="{{ path('rgpd') }}" target="_blank">Lire la clause de conservation des données</a>
                    </label>
                </div>
                <button type="submit" class="mt-3 w-100 submit-subscribe">Créer le compte</button>
                <div class="mt-3">
                    {% if form_errors(registrationForm) %}
                        <div class="alert alert-warning" role="alert">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}

                    {% if form_errors(registrationForm.plainPassword) %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    {% endif %}
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
     <div class="img-office-people">
         <div class="quote-edgar">
            <p class="text-office-people">"Nous devons tout mettre en oeuvre pour permettre à nos influenceurs
            d'avoir un outil performant !" </p>
            <small>- Edgar Roumier, PDG Adjoint</small>
         </div>
        <img src="{{ asset('assets/images/office-people.png') }}">
     </div>
    </div>
    {% endif %}

{% endblock %}
