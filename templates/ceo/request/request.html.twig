{% extends "base.html.twig" %}
{% block title %}Bonjour
{% endblock %}
{% block body %}
	{% include "commons/_ceo_navbar.html.twig" %}

	{% for contact in contacts %}
		{% if 'ROLE_INFLUENCER' not in contact.user.roles %}
			<div class="card">
				<div class="card-body">
					<p class="card-text">{{contact.email}}</p>
					<p class="card-text">{{contact.motif.motifInfluencer}}</p>
					<a href="{{path('ceo_candidate_show', {'id': contact.id})}}" class="btn btn-primary">Voir la demande</a>
					<a href="{{ path('ceo_candidate_delete', {'id': contact.id})}}" class="btn btn-danger">Supprimer la demande</a>
				</div>
			</div>
		{% endif %}
	{% endfor %}

{% endblock %}
