{% extends 'base.html.twig' %}
{% block title %}Edition de votre profil{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="mb-4">Formulaire Utilisateur</h1>
        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.text, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.social, 'Réseaux Sociaux', {'label_attr': {'class': 'form-label mb-3'}}) }}
                {{ form_widget(form.social, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.specialty, 'Spécialité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.specialty, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
