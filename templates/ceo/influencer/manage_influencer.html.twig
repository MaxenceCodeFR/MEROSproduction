{% extends "base.html.twig" %}
{% block title %}GÃ©rer les influenceurs
{% endblock %}
{% block body %}
	{% include "commons/_ceo_navbar.html.twig" %}
	<div class="container py-4">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for influencer in influencers %}
				<div class="col">
					<a href="{{ path('ceo_influencer_show', {'id': influencer.id}) }}" class="text-decoration-none text-dark">
						<div class="card h-100 shadow {{ influencer.isFamous ? 'border-warning' : '' }}" style="{{ influencer.isFamous ? 'border-width:2px;' : '' }}">
							{% for media in influencer.images %}
								<img src="{{ asset('assets/uploads/' ~ media.getImages()) }}" class="card-img-top rounded-circle img-fluid w-50 h-auto mx-auto mt-3">
							{% endfor %}
							<div class="card-body text-center">
								<h5 class="card-title">{{ influencer.firstname }}
									{{ influencer.lastname }}</h5>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
