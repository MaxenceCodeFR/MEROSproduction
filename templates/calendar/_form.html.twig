<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-md-8 col-sm-12">

			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

			<div class="mb-3">
				{{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.start, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.end, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.all_day, {'label': 'Toute la journ√©e'}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.background_color, {'attr': {'class': 'form-control form-control-color'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.border_color, {'attr': {'class': 'form-control form-control-color'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.text_color, {'attr': {'class': 'form-control form-control-color'}}) }}
			</div>

			<button type="submit" class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>

			{{ form_end(form) }}
		</div>
	</div>
</div>
