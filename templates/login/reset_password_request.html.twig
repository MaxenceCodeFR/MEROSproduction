{% extends "base.html.twig" %}
{% block title %}Demande de réinitialisation de mot de passe
{% endblock %}

{% block body %}
	{% include "commons/_navbar.html.twig" %}

	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow-lg">
					<div class="card-body">
						<h3 class="card-title text-center mb-4">Réinitialisation de Mot de Passe</h3>
						{{ form_start(requestPassForm, {'attr': {'class': 'form-horizontal'}}) }}
						<div class="form-floating mb-3">
							{{ form_widget(requestPassForm.email, {
                                    'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}
                                }) }}
							<label for="floatingInput">Adresse e-mail</label>
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
						</div>
						{{ form_end(requestPassForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
