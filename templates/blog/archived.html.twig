{% extends 'base.html.twig' %}

{% block title %}Articles Archiv√©s{% endblock %}

{% block body %}
    {# Inclusion de la barre de navigation #}
    {% include "commons/_navbar.html.twig" %}

    <div class="container">
        <h1>Articles</h1>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            {% for archive in archived %}
                <div class="col">
                    <div class="card">
                        <img src="{{ asset('assets/uploads/' ~ archive.image) }}" class="card-img-top" alt="{{ archive.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ archive.title }}</h5>
                            <p class="card-text">{{ archive.createdAt|date('Y-m') }}</p>
                            <a href="{{ path('blog_archive', {id: archive.id}) }}" class="btn btn-primary stretched-link">Voir l'article</a>
                        </div>
                    </div>
                        <p class="text-danger">Danger Zone : Vous pouvez supprimer cet article definitivement
                            <a href="{{ path('blog_delete', {id: archive.id}) }}" class="btn btn-danger mt-2">Supprimer l'article</a>
                        </p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

